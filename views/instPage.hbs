<html>

<head>
    <title>Instrument Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <style>
        .row {
            margin-top: 40%;
        }
        .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

</head>

<body>
    <div class="container">
        

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
                        preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                        <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">{{instName}}</text>
                    </svg>
                    <div class="card-body">
                        <p class="card-text"></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-lg btn-outline-secondary" href="/recordingPage/{{instName}}">Play</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container text-center">
            {{!-- <noscript>
                <a type="button" class="btn btn-default navbar-btn" href="/" title="back" data-name="0">Back</a>
                <a type="button" class="btn btn-default navbar-btn" href="/" title="home" data-name="1">Home</a>
                <a type="button" class="btn btn-default navbar-btn" href="/recordings" title="recordings" data-name="2">My
                    Recordings</a>
                <a type="button" class="btn btn-default navbar-btn" href="/profile" title="profile" data-name="3">Profile</a>
            </noscript> --}}
            <button type="button" class="btn btn-info navbar-btn" title="back" data-name="0">Back</button>
            <button type="button" class="btn btn-default navbar-btn" title="home" data-name="1">Home</button>
            <button type="button" class="btn btn-default navbar-btn" title="recordings" data-name="2">My Recordings</button>
            <button type="button" class="btn btn-default navbar-btn" title="profile" data-name="3">Profile</button>
        </div>
    </nav>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/instrument.js"></script>
</body>

</html>